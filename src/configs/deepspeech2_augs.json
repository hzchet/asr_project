{
  "name": "deepspeech2_specaug",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 128
      }
    },
    "augmentations": {
      "wave": [],
      "spectrogram": [
        {
          "type": "RandomSpecAugment",
          "args": {
            "p": 0.3,
            "freq_mask_param": 27,
            "time_mask_param": 100,
            "num_freq_mask": 2,
            "num_time_mask": 2
          }
        }
      ]
    },
    "log_spec": true
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "channels": [32, 32],
      "kernel_sizes": [[41, 11], [21, 11]],
      "strides": [[2, 2], [2, 1]],
      "paddings": [[20, 5], [10, 5]],
      "hidden_size": 512,
      "bidirectional": true,
      "num_rnn_blocks": 5
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 64,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    },
    "test-other": {
      "batch_size": 64,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "train_metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "valid_metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam_search)"
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam_search)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 500,
      "epochs": 101,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.2
    }
  },
  "text_encoder": {
    "type": "CTCCharTextEncoder",
    "args": {
      "lm_model_path": "saved/lms/3-gram.arpa"
    }
  },
  "trainer": {
    "epochs": 150,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min test-clean_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "wandb_run_name": "DeepSpeech w SpecAug",
    "len_epoch": 500,
    "grad_norm_clip": 10
  }
}
